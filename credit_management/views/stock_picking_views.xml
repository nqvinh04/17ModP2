<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign']" position="attributes">
                <attribute
                    name="invisible"
                >show_check_availability_credit_management or not show_check_availability</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="context">{'hold_do': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="hold_delivery_till_payment" />
                <field name="show_check_availability_credit_management" invisible="1" />
            </xpath>
        </field>
    </record>

</odoo>
