<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Email template -->
        <record id="email_template_machine_repair" model="mail.template">
            <field name="name">Machine Repair - Send by Email</field>
            <field name="email_from">{{(object.technician_id.email)}}</field>
            <field name="subject">{{object.name}} (Ref {{object.sequence or 'n/a' }})</field>
            <field name="partner_to">{{object.partner_id.id}}</field>
            <field name="model_id" ref="bi_machine_repair_management.model_machine_repair"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html"><![CDATA[
<p>Dear
   <t t-out="object.partner_id.name"> 
,</p>
<p>
We have closed your machine repair request now.
</p>

<p>
Thanks for your Participation...!
</p>    

<p>You can reply to this email if you have any questions.</p>
<p>Thank you,</p>

<p style="color:#888888;">
<t t-if="object.technician_id and object.technician_id.signature">
    <t t-out="object.technician_id.signature"></t>
</t>
</p>
]]></field>
        </record>

    </data>
</odoo>
