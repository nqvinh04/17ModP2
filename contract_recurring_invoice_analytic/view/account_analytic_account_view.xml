<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_analytic_account_form_inherit_analytic_line" model="ir.ui.view">
            <field name="name">analytic.analytic.account.form (sale_order_line)</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <button name="recurring_invoice" string="Generate Invoice"
                        type="object" class="btn-primary"  invisible="contract_lock == True"/>
                    <button name="lock_analytic_account" string="Lock" 
                        type="object" class="btn-primary" invisible="contract_lock == True"/>
                    <button name="unlock_analytic_account" string="Unlock"
                        type="object" class="btn-primary" invisible="contract_lock != True"/>
                </xpath>
<!--                <xpath expr="//form/sheet/div/button[@name='toggle_active']" position="after">-->
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <!-- <button class="oe_stat_button" name="action_view_invoice" type="object" attrs="{'invisible': [('custom_invoice_count', '=', 0)]}" icon="fa-pencil-square-o"> -->
                    <!-- <button class="oe_stat_button" name="action_view_custom_analytic_invoice" type="object" attrs="{'invisible': [('custom_invoice_count', '=', 0)]}" icon="fa-pencil-square-o">
                        <field string="Recurring Invoices" name="custom_invoice_count" widget="statinfo" />
                    </button> -->
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="order_invoice_currency_id"/>
                    <field name="start_date" readonly="contract_lock == True"/> 
                    <field name="end_date" readonly="contract_lock == True"/>
                    <field name="stage" readonly='1'/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="recurring_interval" string="Recurring Period"/>
                    <div>
                        <field name="recurring_interval" class="oe_inline" readonly="contract_lock == True"/>
                        <field name="recurring_rule_type" class="oe_inline" readonly="contract_lock == True"/>
                    </div>
                    <field name="number_of_days" readonly="contract_lock == True"/>
                    <label for="recurring_next_date" string="Date of Next Invoice"/>
                    <div>
                        <field name="recurring_next_date" readonly="contract_lock == True"/>
                    </div>
                </xpath>
                <xpath expr="//form/sheet/group" position="after">
                    <!-- <group> -->
                        <notebook>
                            <page string="Contract Lines" id="subscription_product">
                                <!-- <field name="subscription_product_line_ids" context="{'default_currency_id': order_invoice_currency_id or currency_id}" attrs="{'readonly': [('contract_lock', '=', True)]}"> -->
                                <field name="subscription_product_line_ids" readonly="contract_lock == True">
                                    <form string="Contracts Lines">
                                        <group>
                                            <group>
                                                <field name="product_id" />
                                                <field name="price_subtotal" invisible="1"/>
<!--                                                <label for="product_uom_qty" string="Ordered Quantity"/>-->
                                                <div>
                                                    <field name="product_uom"/>
                                                </div>
                                                <field name="price_unit"/>
                                                <label for="discount" />
                                                <div name="discount" >
                                                    <field name="discount" class="oe_inline"/> %
                                                </div>
                                            </group>
                                            <group>
                                                <field name="tax_ids" widget="many2many_tags" />
                                                <!-- <label for="analytic_tag_ids"/>
                                                <div>
                                                    <field name="analytic_tag_ids" widget="many2many_tags"/>
                                                </div> -->
                                            </group>
                                        </group>
                                        <label for="name"/>
                                        <field name="name"/>
                                    </form>
                                    <tree string="Contracts Lines" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="currency_id" column_invisible="True"/>
<!--                                        <field name="layout_category_id" /> odoo12-->
                                        <field name="name"/>
                                        <field name="product_uom_qty" string="Ordered Qty"/>
                                        <field name="product_uom" />
                                        <!-- <field name="analytic_tag_ids" widget="many2many_tags"/> -->
                                        <field name="price_unit"  widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="tax_ids" widget="many2many_tags" />
                                        <field name="discount" />
                                        <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="sub_amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <field name="sub_amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="sub_amount_total" />
                                        <button name="button_dummy"
                                            string="(update)" type="object" class="oe_edit_only oe_link"/>
                                    </div>
                                    <field name="sub_amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                            
                            <page string="Sale Order Lines" id="not_subscription_product">
                                <!-- <field name="not_subscription_product_line_ids" context="{'default_currency_id': order_invoice_currency_id or currency_id}"> -->
                                <field name="not_subscription_product_line_ids">
                                    <form string="Sale Order Lines">
                                        <group>
                                            <group>
                                                <field name="product_id" />
                                                <field name="price_subtotal" invisible="1"/>
<!--                                                <label for="product_uom_qty" string="Ordered Quantity"/>-->
                                                <div>
                                                    <field name="product_uom"/>
                                                </div>
                                                <field name="price_unit" />
                                                <label for="discount" />
                                                <div name="discount"  >
                                                    <field name="discount" class="oe_inline"/> %
                                                </div>
                                            </group>
                                            <group>
                                                <field name="tax_ids" widget="many2many_tags" />
                                                <!-- <label for="analytic_tag_ids"/>
                                                <div>
                                                    <field name="analytic_tag_ids" widget="many2many_tags"/>
                                                </div> -->
                                            </group>
                                        </group>
                                        <label for="name"/>
                                        <field name="name"/>
                                    </form>
                                    <tree string="Sale Order Lines" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="currency_id" column_invisible="True"/>
<!--                                        <field name="layout_category_id" /> odoo12-->
                                        <field name="name"/>
                                        <field name="product_uom_qty" string="Ordered Qty"/>
                                        <field name="product_uom" />
                                        <!-- <field name="analytic_tag_ids" widget="many2many_tags"/> -->
                                        <field name="price_unit"  widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="tax_ids" widget="many2many_tags" />
                                        <field name="discount" />
                                        <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="sale_amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <field name="sale_amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="sale_amount_total" />
                                        <button name="button_dummy"
                                            string="(update)" type="object" class="oe_edit_only oe_link"/>
                                    </div>
                                    <field name="sale_amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                </group>
                            </page>
                            <page string="Terms and Conditions" id="terms_and_conditions">
                                <field name="terms_and_conditions" readonly="contract_lock == True"/>
                            </page>
                            <page string="Other Information" id="other_information">
                                <group>
                                    <group>
                                        <field name="journal_id" readonly="contract_lock == True"/>
                                        <field name="contract_lock" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    <!-- </group> -->
                </xpath>
            </field>
        </record>
        
        <record id="view_account_analytic_account_search_inherit_analytic_line" model="ir.ui.view">
            <field name="name">analytic.analytic.account.search (sale_order_line)</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_search" />
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="after">
                    <filter name="grp_satrt_date" string="Start Date" context="{'group_by': 'start_date'}"/>
                    <filter name="grp_end_date" string="End Date" context="{'group_by': 'end_date'}"/>
                    <filter name="grp_stage" string="Stage" context="{'group_by': 'stage'}"/>
                    <filter name="grp_recurring_next_date" string="Recurring Next Date" context="{'group_by': 'recurring_next_date'}"/>
                </xpath>
                
            </field>
        </record>
        
        <record id="view_account_analytic_account_list_inherit_analytic_line" model="ir.ui.view">
            <field name="name">analytic.analytic.account.list (sale_order_line)</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_list" />
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-success">stage == 'inprogress'</attribute>
                    <attribute name="decoration-info">stage == 'to_expired'</attribute>
                    <attribute name="decoration-danger">stage == 'expired'</attribute>
                    <attribute name="decoration-muted">stage == 'lock'</attribute>
                </xpath>
                <xpath expr="//tree/field[last()]" position="after">
                    <field name="stage" />
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
