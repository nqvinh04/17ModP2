<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.WhatsappSidebarCategoryItem" owl="1">
        <t t-if="FacebookcategoryItem">
            <t t-set="o_DiscussSidebarCategoryItem_hoverItem" t-value="'btn p-0 text-start text-700 opacity-100-hover opacity-75'"/>
            <button class="o_DiscussSidebarCategoryItem menuitem btn d-flex align-items-center w-100 px-0 py-2 border-0 rounded-0 fw-normal text-reset"
                t-att-class="{
                    'bg-30': !FacebookcategoryItem.isActive,
                    'o-active bg-900': FacebookcategoryItem.isActive,
                    'o-unread': FacebookcategoryItem.isUnread,
                }" t-attf-class="{{ className }}" t-on-click="FacebookcategoryItem.onClick" t-att-data-channel-id="FacebookcategoryItem.channel.id" t-att-data-channel-name="FacebookcategoryItem.channel.displayName"
                t-ref="root">
                <div class="o_DiscussSidebarCategoryItem_item o_DiscussSidebarCategoryItem_avatar ms-4">
                    <div class="o_DiscussSidebarCategoryItem_imageContainer position-relative d-flex">
                        <img class="o_DiscussSidebarCategoryItem_image w-100 h-100 rounded-circle" t-att-src="FacebookcategoryItem.avatarUrl" alt="Thread Image"/>
                            <ThreadIcon className="'o_DiscussSidebarCategoryItem_threadIcon position-absolute bottom-0 end-0 d-flex align-items-center justify-content-center rounded-circle bg-100'" thread="FacebookcategoryItem.thread"/>
                    </div>
                </div>
                <span class="o_DiscussSidebarCategoryItem_item o_DiscussSidebarCategoryItem_name ms-3 me-2 text-truncate" style="color: white" t-att-class="{ 'o-item-unread fw-bolder': FacebookcategoryItem.isUnread }">
                    <t t-if="FacebookcategoryItem.channel.channel_type">
                        <t t-esc="FacebookcategoryItem.channel.custom_channel_name"/>
                    </t>
                    <t t-else="">
                        <t t-esc="FacebookcategoryItem.thread.displayName"/>
                    </t>
                </span>
                <div class="o_DiscussSidebarCategoryItem_item flex-grow-1"/>
                <div t-attf-class="o_DiscussSidebarCategoryItem_item o_DiscussSidebarCategoryItem_commands ms-1 {{ FacebookcategoryItem.thread and FacebookcategoryItem.thread.rtcSessions.length ? 'me-1' : 'me-3' }}">
                    <t t-if="FacebookcategoryItem.hasSettingsCommand">
                        <div t-attf-class="o_DiscussSidebarCategoryItem_command o_DiscussSidebarCategoryItem_commandSettings fa fa-cog {{ o_DiscussSidebarCategoryItem_hoverItem }}" t-on-click="FacebookcategoryItem.onClickCommandSettings" title="Channel settings" role="img"/>
                    </t>
                    <t t-if="FacebookcategoryItem.hasLeaveCommand">
                        <div t-attf-class="o_DiscussSidebarCategoryItem_command o_DiscussSidebarCategoryItem_commandLeave fa fa-times {{ o_DiscussSidebarCategoryItem_hoverItem }} ms-1" t-on-click="FacebookcategoryItem.onClickCommandLeave" title="Leave this channel" role="img"/>
                    </t>
                    <t t-if="FacebookcategoryItem.hasUnpinCommand">
                        <div t-attf-class="o_DiscussSidebarCategoryItem_command o_DiscussSidebarCategoryItem_commandUnpin fa fa-times {{ o_DiscussSidebarCategoryItem_hoverItem }} ms-1" t-on-click="FacebookcategoryItem.onClickCommandUnpin" title="Unpin Conversation" role="img"/>
                    </t>
                </div>
                <t t-if="FacebookcategoryItem.thread and FacebookcategoryItem.thread.rtcSessions.length">
                    <div class="o_DiscussSidebarCategoryItem_item o_DiscussSidebarCategoryItem_callIndicator fa fa-volume-up ms-1 me-3" t-att-class="{ 'o-isCalling text-danger': FacebookcategoryItem.thread.rtc }"/>
                </t>
                <t t-if="FacebookcategoryItem.counter > 0">
                    <div class="o_DiscussSidebarCategoryItem_counter o_DiscussSidebarCategoryItem_item badge rounded-pill ms-1 me-3" style="background-color: #28a745; color: white;">
                        <t t-esc="FacebookcategoryItem.counter"/>
                    </div>
                </t>
            </button>
        </t>
    </t>
