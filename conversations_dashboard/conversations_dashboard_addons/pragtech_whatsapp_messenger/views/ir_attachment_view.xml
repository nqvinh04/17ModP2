<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attachment_whatsapp_form" model="ir.ui.view">
        <field name="name">view.attachment.whatsapp.form</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="priority">22</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mimetype']" position="after">
                <field name="public_url"/>
            </xpath>
        </field>
    </record>
</odoo>


