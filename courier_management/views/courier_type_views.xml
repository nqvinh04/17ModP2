<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--        Courier type tree view-->
    <record id="courier_type_view_tree" model="ir.ui.view">
        <field name="name">courier.type.view.tree</field>
        <field name="model">courier.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="courier_type"/>
            </tree>
        </field>
    </record>
    <!--        Courier type search view-->
    <record id="courier_type_view_search" model="ir.ui.view">
        <field name="name">courier.type.view.search</field>
        <field name="model">courier.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="courier_type"/>
            </search>
        </field>
    </record>
    <!--    Courier Type menu action-->
    <record id="courier_type_action" model="ir.actions.act_window">
        <field name="name">Types</field>
        <field name="res_model">courier.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
